{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-underscore-dangle": 0, // todo: tobe fixed
    "class-methods-use-this": 0, // todo: tobe fixed
    "no-eval": 0 // todo: tobe fixed
  },
  "env": {
    "node": true,
    "es6": true

  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "globals": {
    "before": true,
    "after": true,
    "describe": true,
    "beforeEach": true,
    "it": true,
    "expect": true,
    "document": true,
    "test": true,
    "jest": true,
    "afterEach": true
  }
}
